---
import Nav from "../components/ui/Nav.astro";
import Footer from "../components/ui/Footer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3910294307881756"
      crossorigin="anonymous"></script><meta
      name="google-adsense-account"
      content="ca-pub-3910294307881756"
    />
    <title>{title}</title>
    <link rel="shortcut icon" href="/img/Logo.png" type="image/x-icon" />
  </head>
  <body>
    <section class="flex flex-col py-8 px-8 md:px-16 xl:px-32 gap-16">
      <Nav />
      <slot />
    </section>
  </body>
</html>
