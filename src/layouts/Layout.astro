---
import Nav from "../components/ui/Nav.astro";
import Footer from "../components/ui/Footer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3910294307881756"
      crossorigin="anonymous"></script>
    <meta name="title" content="RISE | RESEARCH IN SUSTAINABILITY EVOLUTION" />
    <meta
      name="description"
      content="Sitio web institucional de rise, research in sustainability evolution"
    />
    <meta
      name="keywords"
      content="RISE, RESEARCH, IN, SUSTAINABILITY, EVOLUTION, JORGE, NICOLAS, ABELLO, DYLAN, ALEXANDER, PEÑA, ARANGO"
    />
    <meta name="robots" content="index, follow" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="language" content="Spanish" />
    <meta name="revisit-after" content="15 days" />
    <meta name="author" content="Dylan Peña" />

    <title>{title}</title>
    <link rel="shortcut icon" href="/img/Logo.png" type="image/x-icon" />
  </head>
  <body class="">
    <section
      class="max-w-screen-2xl m-auto flex flex-col py-8 px-8 md:px-16 xl:px-32 gap-16"
    >
      <Nav />
      <slot />
    </section>
    <Footer />
  </body>
</html>
